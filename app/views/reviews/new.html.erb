<%= simple_form_for([@restaurant, @review]) do |r| %>
  <div class="form-inputs">
    <%= r.input :content %>
    <%= r.input :rating %>
  </div>

  <div class="form-actions">
    <%= r.button :submit %>
  </div>
<% end %>

<% if @review.errors.any? %>
  <ul>
    <% @review.errors.full_messages.each do |message| %>
    <li>
      <p>
        <%= message %>
      </p>
    </li>
    <% end %>
  </ul>
<% end %>

<%= link_to 'Back', restaurants_path %>
